@startuml
' Диаграмма классов ProjectFlow (основные сущности)
class Проект {
  +id: int
  +название: string
  +описание: string
  +статус: Status
  +дата_начала: date
  +дата_окончания: date
  +бюджет: number
}

class Задача {
  +id: int
  +заголовок: string
  +описание: string
  +статус: TaskStatus
  +приоритет: Priority
  +исполнитель: Пользователь
  +дата_создания: date
  +дата_обновления: date
}

class Пользователь {
  +id: int
  +имя: string
  +email: string
  +роль: string
}

class Команда {
  +id: int
  +название: string
}

class Спринт {
  +id: int
  +название: string
  +дата_начала: date
  +дата_окончания: date
  +статус: string
}

class Комментарий {
  +id: int
  +автор: Пользователь
  +текст: string
  +дата: date
}

Проект "1" -- "*" Задача : содержит
Проект "1" -- "*" Пользователь : участники
Проект "1" -- "*" Спринт : спринты
Задача "1" -- "*" Комментарий : обсуждение
Задача "*" -- "1" Пользователь : исполнитель
Команда "1" -- "*" Пользователь : участники
Команда "1" -- "*" Проект : проекты
Спринт "1" -- "*" Задача : задачи
@enduml
